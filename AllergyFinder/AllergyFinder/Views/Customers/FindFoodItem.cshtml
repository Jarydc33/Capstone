@model AllergyFinder.Models.FindFoodItemViewModel
@{
    ViewBag.Title = "FindFoodItem";
}

<div class="HomeHeader">
    <div class="Card">
        <h3>Search for a Food</h3>
    </div>
</div>

<div class="row">
    <div class="col-md-3">
        @Html.Partial("_SideBarPartial")
    </div>
    <div class="col-md-8">
        <div class="Card">
            @using (Html.BeginForm())
            {
                <div class="form-horizontal">
                    <h4 style="text-align:center">USDA Database</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        <p>@Html.Label("Brand Name", htmlAttributes: new { @class = "control-label col-md-2" })</p>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.BrandName, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    <div class="form-group">
                        <p>@Html.Label("Food Name", htmlAttributes: new { @class = "control-label col-md-2" })</p>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.FoodName, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Search" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }
        </div>        
    </div>
</div>