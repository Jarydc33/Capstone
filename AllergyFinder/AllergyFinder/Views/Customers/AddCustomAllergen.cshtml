@model AllergyFinder.Models.AddCustomAllergenViewModel

@{
    ViewBag.Title = "Add Custom Allergen";
}

<div class="HomeHeader">
    <div class="Card">
        <h3>Add a Custom Allergen</h3>
    </div>
</div>

<div class="row">
    <div class="col-md-3">
        @Html.Partial("_SideBarPartial")
    </div>
    <div class="col-md-6">
        <div class="Card">
            @using (Html.BeginForm())
            {
                <div class="form-group">
                    <h4>Allergen Name</h4>
                </div>
                <div class="form-group">
                    @Html.EditorFor(model => model.AllergenName, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            }
        </div>
    </div>
</div>
