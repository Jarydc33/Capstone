@model AllergyFinder.Models.AddCustomAllergenViewModel

@{
    ViewBag.Title = "Add Custom Allergen";
}

<div class="HomeHeader">
    <h3>Add a Custom Allergen to Search For</h3>
</div>

<div class="row">
    <div class="col-md-2">
        @Html.Partial("_SideBarPartial")
    </div>
    <div class="col-md-6">
        <div class="SideBar">
            @using (Html.BeginForm())
            {
                <div class="form-group">
                    <p>@Html.Label("Type Allergen Name Here", new { @class = "control-label col-md-2" })</p>
                </div>
                <div class="form-group">
                    @Html.EditorFor(model => model.AllergenName, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Search" class="btn btn-default" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>
