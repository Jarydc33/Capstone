@model AllergyFinder.Models.LogByAllergenViewModel


<div class="HomeHeader">
    <div class="Card">
        <h3>Log Meal by Allergens</h3>
    </div>
</div>

<div class="row">
    <div class="col-md-3">
        @Html.Partial("_SideBarPartial")
    </div>
    <div class="col-md-4">
        <div class="Card">
            @using (Html.BeginForm())
            {
                <div class="form-group">
                    <p>@Html.Label("Select the allergies to log")</p>
                    @Html.DropDownListFor(model => model.ChosenAllergens, (MultiSelectList)Model.Allergens, new { multiple = "multiple" })
                </div>

                <div class="form-group">
                    <p>@Html.Label("Enter the Meal Name")</p>
                    @Html.EditorFor(model => model.UserMealName, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <div class="form-group">
                    <input type="submit" value="Add" class="btn btn-default" />
                </div>

            }

        </div>

    </div>
    <div class="col-md-3">
        <div class="Card">
            <h4>If you can`t find a food or meal in the database but you know what allergens are in the meal, log it here.</h4>
            <h4>Click on all the allergens in the meal and it will add it to the database for you.</h4>
        </div>
    </div>

</div>