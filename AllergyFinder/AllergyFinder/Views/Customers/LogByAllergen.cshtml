@model AllergyFinder.Models.LogByAllergenViewModel


<div class="HomeHeader">
    <h3>Log By Allergen</h3>
</div>

<div class="row">
    <div class="col-md-2">
        @Html.Partial("_SideBarPartial")
    </div>
    <div class="col-md-4">
        <div class="SideBar">
            @using (Html.BeginForm())
            {
                <div class="form-group">
                    <p>@Html.Label("Select the allergies to log")</p>
                    @Html.DropDownListFor(model => model.ChosenAllergens, (MultiSelectList)Model.Allergens, new { multiple = "multiple" })
                </div>

                <div class="form-group">
                    <p>@Html.Label("Enter the Meal Name")</p>
                    @Html.EditorFor(model => model.UserMealName, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Add" class="btn btn-default" />
                    </div>
                </div>

            }

        </div>

    </div>

</div>