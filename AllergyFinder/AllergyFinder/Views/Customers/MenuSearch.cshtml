@model AllergyFinder.Models.FindFoodItemViewModel
@{
    ViewBag.Title = "MenuSearch";
}

<div class="HomeHeader">
    <h3>Menu Information</h3>
</div>

<div class="row">
    <div class="col-md-2">
        @Html.Partial("_SideBarPartial")
    </div>
    <div class="col-md-6 SideBar">
        <table class="table">
            <tr>
                <th>
                    <h4>@Html.DisplayName("Menu Item")</h4>
                </th>
                <th>
                    <h4>@Html.DisplayName("Allergens")</h4>
                </th>
                <th></th>

            </tr>
            @{
                if (Model != null && Model.foundItems != null)
                {
                    foreach (var item in Model.foundItems)
                    {
                        <tr>
                            <td>
                                <p>@Html.DisplayFor(modelItem => item.FoodItem)</p>
                            </td>
                            <td>
                                <p>@Html.DisplayFor(modelItem => item.Allergens)</p>
                            </td>
                            <td>
                                <p>@Html.ActionLink("Log This Food", "LogRestaurantFood", new { id = item.id })</p>
                            </td>

                        </tr>
                    }
                }
            }


        </table>
    </div>
</div>

